- content_for :header do
  = stylesheet_link_tag 'collection'
%h1 Playlistgenerator
%div
  %h4 Playlist aus Album erstellen
  %form.form-inline{:method => "post", :action => collection_show_result_album_path}
    %input#inputEmail{:type => "text", :name => "artist", :placeholder => "Künstlername"}
    %input#inputAlbum{:type => "text", :name => "album", :placeholder => "Albumname"}
      %button.btn.btn-inverse{:type => "submit"} Suchen
  
%div
  %h4 Playlist aus Parser
  %form{action: collection_show_result_parser_path, method: "post"}
    %textarea{:placeholder => "Gewünschte Liste von Songs bitte in folgender Form angeben: Künstler - Titel", :name => "listing", :rows => "5"}
    %button.btn.btn-inverse{style: "display:block"} Lieder suchen und Playlist zusammenstellen
